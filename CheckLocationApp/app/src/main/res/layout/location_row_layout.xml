<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:foreground="?android:selectableItemBackground"
    android:outlineAmbientShadowColor="@color/colorAccent"
    android:outlineSpotShadowColor="@color/colorAccent"
    app:cardBackgroundColor="@color/text_white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">
        <!--    For full width-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp" />

        <com.anand.checklocationapp.presentation.core.views.QueensParkBoldTextView
            android:id="@+id/tv_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_7sdp"
            android:textColor="@color/title_color"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <com.anand.checklocationapp.presentation.core.views.QueensParkBoldTextView
            android:id="@+id/tv_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_7sdp"
            android:textColor="@color/title_color"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <com.anand.checklocationapp.presentation.core.views.PublicSansRegularTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/light_orange"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>